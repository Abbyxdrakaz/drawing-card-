<body>
  <h1>THE CYBER DECK</h1>  <div class="card-container" id="cardContainer">
    <!-- Cards will appear here -->
  </div><button onclick="drawCards()">DRAW</button>

  <script>
    const cards = [
      "SCRALATE BLADE 3EP",
      "VOID SPIKE 2EP",
      "SILENT CORE",
      "FORST LOCK",
      "PHASE GRUAD",
      "LOST DATA SLASH -5 EP",
      "STROM PIECER 2EP",
      "ECHO CHAMBER",
      "CRIMSON FANG 2EP",
      "ENERGY BOOST"
    ];

    function drawCards() {
      const shuffled = [...cards].sort(() => 0.5 - Math.random());
      const selected = shuffled.slice(0,5);

      const container = document.getElementById('cardContainer');
      container.innerHTML = '';

      selected.forEach(card => {
        const div = document.createElement('div');
        div.className = 'card';
        div.innerText = card;
        container.appendChild(div);
      });
    }
  </script></body>
